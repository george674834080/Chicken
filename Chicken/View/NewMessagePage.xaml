<phone:PhoneApplicationPage 
    x:Class="Chicken.View.NewMessagePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:ctrls="clr-namespace:Chicken.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait" Orientation="Portrait"
    mc:Ignorable="d" d:DesignHeight="768" d:DesignWidth="480"
    shell:SystemTray.IsVisible="True">

    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style TargetType="TextBlock" BasedOn="{StaticResource TextSmall}">
                <Setter Property="TextAlignment" Value="Left" />
            </Style>
        </Grid.Resources>
        <!--title-->
        <TextBlock Grid.Row="0" Text="{Binding Path=Header}" />
        <!--user name whom to send to-->
        <TextBox Grid.Row="1" Text="TO:" />
        <!--conversation list-->
        <ctrls:AutoGrid Grid.Row="2" Margin="4">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="VerticalCompressionBottomHandler">
                    <i:InvokeCommandAction Command="{Binding Path=LoadCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <ctrls:AutoGrid.RowDefinitions>
                <RowDefinition />
            </ctrls:AutoGrid.RowDefinitions>
            <ScrollViewer Grid.Row="0"
                                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                  HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                <ScrollViewer.Content>
                    <!--conversation-->
                    <Grid Margin="4">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" HorizontalAlignment="Stretch">
                            <ListBox x:Name="AutoListBox"
                                                 VerticalAlignment="Top"
                                                 ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                                 ItemsSource="{Binding ConversationList}">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate>
                                                    <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <ctrls:MessageTemplateSelector Content="{Binding}">
                                            <ctrls:MessageTemplateSelector.MessageTemplate>
                                                <DataTemplate>
                                                    <StackPanel Margin="0,4" Orientation="Horizontal"
                                                                HorizontalAlignment="Left" VerticalAlignment="Center">
                                                        <!--avatar-->
                                                        <Button Width="64" Height="64"
                                                                Command="{Binding DataContext.ClickCommand, ElementName=AutoListBox}"
                                                                CommandParameter="{Binding User}">
                                                            <Button.Template>
                                                                <ControlTemplate>
                                                                    <ctrls:ImageContainer ImageSource="{Binding Path=User.ProfileImage}"
                                                                                          Style="{StaticResource ProfileImageSmall}" />
                                                                </ControlTemplate>
                                                            </Button.Template>
                                                        </Button>
                                                        <!--content-->
                                                        <Polygon Opacity="0.2"
                                                            Fill="{StaticResource PhoneForegroundBrush}"
                                                            Points="0,10 10,10, 10,20" />
                                                        <StackPanel>
                                                            <!--text-->
                                                            <Grid>
                                                                <Rectangle Opacity="0.2"
                                                                           Fill="{StaticResource PhoneForegroundBrush}">
                                                                </Rectangle>
                                                                <!--text-->
                                                                <ctrls:AutoRichTextBox TweetData="{Binding}"
                                                                                       TextAlignment="Left">
                                                                </ctrls:AutoRichTextBox>
                                                            </Grid>
                                                            <TextBlock Opacity="0.6" Text="{Binding Path=CreatedDate}" />
                                                        </StackPanel>
                                                        <!--delete-->
                                                        <TextBlock Width="64" Height="64" Text="delete" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ctrls:MessageTemplateSelector.MessageTemplate>
                                        </ctrls:MessageTemplateSelector>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Grid>
                </ScrollViewer.Content>
            </ScrollViewer>
        </ctrls:AutoGrid>
        <StackPanel Orientation="Horizontal">
            <!--menu-->
            <!--text box-->

        </StackPanel>
        <!--progress bar-->
    </Grid>


</phone:PhoneApplicationPage>
