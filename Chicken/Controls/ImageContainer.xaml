<UserControl x:Class="Chicken.Controls.ImageContainer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:it="clr-namespace:ImageTools.Controls;assembly=ImageTools.Controls"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480" x:Name="Container">

    <Grid x:Name="grid" Background="Transparent"
          HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Rectangle x:Name="placehold" Opacity="0.4"
                   Fill="{StaticResource PhoneForegroundBrush}">
            <Rectangle.OpacityMask>
                <ImageBrush ImageSource="/Images/dark/cat.png" Stretch="Fill" />
            </Rectangle.OpacityMask>
        </Rectangle>
        <Image x:Name="PngImage" Stretch="Fill" Source="{Binding Path=ImageSource, ElementName=Container}"
               ImageOpened="png_ImageOpened" ImageFailed="png_ImageFailed" />
        <it:AnimatedImage x:Name="GifImage" Stretch="Fill" />
    </Grid>
</UserControl>
